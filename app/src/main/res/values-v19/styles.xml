<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <!--Toolbar颜色-->
        <item name="colorPrimary">@color/toolbar_red</item>
        <!-- 状态栏颜色 -->
        <item name="colorPrimaryDark">@color/toolbar_red</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>
    <style name="MyTabLayoutTextAppearance" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textSize">18dp</item>
        <item name="android:textColor">@color/tabLayout_gray</item>
    </style>

    <style name="DialogStyle" parent="@android:style/Theme.Dialog">

        <item name="android:backgroundDimEnabled">false</item> <!--activity不变暗-->
        <item name="android:windowBackground">@android:color/transparent</item>


    </style>


</resources>