<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".ui.MainActivity">
    <FrameLayout
        android:id="@+id/activity_main_framlayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/activity_main_line_iv" />


    <ImageView
        android:id="@+id/activity_main_line_iv"
        android:background="@color/line_gray"
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="55dp"
        android:layout_height="1dp" />
    <ImageView
        android:id="@+id/activity_main_bg_iv"
        android:background="@color/radioGroup_bg_gray"
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_height="55dp" />
    <RadioGroup
        android:background="@color/transparent"
        android:id="@+id/activity_main_radioGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true">
        <RadioButton
            android:checked="true"
            android:id="@+id/activity_main_rb_news"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="动态"
            android:textColor="@drawable/selector_rb_text"
            android:gravity="center_horizontal"
            android:button="@null"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:drawableTop="@drawable/selector_radiobutton_news"/>

        <RadioButton
            android:id="@+id/activity_main_rb_video"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@drawable/selector_rb_text"
            android:text="视频"
            android:gravity="center_horizontal"
            android:button="@null"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:drawableTop="@drawable/selector_radiobutton_video"/>

        <RadioButton
            android:id="@+id/activity_main_rb_contest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:button="@null"
            android:textSize="2dp"
            android:paddingTop="1dp"
            android:paddingBottom="8dp"
            android:drawableTop="@drawable/selector_radiobutton_contest"/>

        <RadioButton
            android:id="@+id/activity_main_rb_bid"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@drawable/selector_rb_text"
            android:text="竞购"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:gravity="center_horizontal"
            android:button="@null"
            android:drawableTop="@drawable/selector_radiobutton_bid"/>
        <RadioButton
            android:id="@+id/activity_main_rb_mine"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@drawable/selector_rb_text"
            android:text="我的"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:gravity="center_horizontal"
            android:button="@null"
            android:drawableTop="@drawable/selector_radiobutton_mine"/>


    </RadioGroup>

</RelativeLayout>
