<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <include
        layout="@layout/main_toolbar_layout"
        android:id="@+id/main_toolbar" />
    <android.support.design.widget.TabLayout
        android:id="@+id/fragment_contest_main_tabLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:tabSelectedTextColor="@color/toolbar_red"
        app:tabIndicatorColor="@color/transparent"
        app:tabTextAppearance="@style/MyTabLayoutTextAppearance"/>
    <ImageView
        android:id="@+id/fragment_contest_main_line_iv"
        android:layout_width="match_parent"
        android:background="@color/line_gray"
        android:layout_height="1dp" />

<android.support.v4.view.ViewPager
    android:id="@+id/fragment_contest_main_vp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"/>
</LinearLayout>