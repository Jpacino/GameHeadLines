<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff">
<TextView
    android:id="@+id/news_main_one_list_item_cosplay_title_tv"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textSize="18sp"
    android:textColor="#000000"
    android:layout_margin="2dp"
    />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
    <ImageView
        android:id="@+id/news_main_one_list_item_cosplay_one_iv"
        android:layout_width="400dp"
        android:scaleType="fitXY"
        android:layout_height="300dp"
        />
    <ImageView
        android:id="@+id/news_main_one_list_item_cosplay_two_iv"
        android:layout_width="400dp"
        android:layout_marginLeft="2dp"
        android:scaleType="fitXY"
        android:layout_height="300dp"
        />
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <TextView
            android:id="@+id/news_main_one_list_item_cosplay_time_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_margin="2dp"
            />
    </RelativeLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/line_gray"/>
</LinearLayout>