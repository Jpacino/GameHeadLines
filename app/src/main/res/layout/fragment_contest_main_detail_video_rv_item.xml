<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">
<ImageView
    android:id="@+id/fragment_contest_detail_video_img_iv"
    android:layout_width="100dp"
    android:layout_height="80dp"
    android:src="@mipmap/ic_launcher"/>
    <TextView
        android:id="@+id/fragment_contest_detail_video_title_tv"
        android:layout_toRightOf="@id/fragment_contest_detail_video_img_iv"
        android:text="内容"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:textSize="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/fragment_contest_detail_video_time_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="时间"
        android:textSize="10dp"
        android:layout_alignBottom="@id/fragment_contest_detail_video_img_iv"
        android:layout_alignParentRight="true"/>
    <ImageView
        android:layout_below="@id/fragment_contest_detail_video_img_iv"
        android:background="@color/line_gray"
        android:layout_width="match_parent"
        android:layout_height="1dp" />



</RelativeLayout>