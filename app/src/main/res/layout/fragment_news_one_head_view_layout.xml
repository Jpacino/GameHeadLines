<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:id="@+id/news_main_one_rl"
        >
        <android.support.v4.view.ViewPager
            android:id="@+id/news_main_one_viewpager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollIndicators="bottom"
            />
        <TextView
            android:id="@+id/news_main_one_pager_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="15dp"
            android:textColor="#ffffff"
            android:background="@null"
            />
        <LinearLayout
            android:id="@+id/linearlayout"
            android:layout_height="30dp"
            android:layout_width="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal"
            >
            <ImageView
                android:layout_width="10dp"
                android:layout_margin="10dp"
                android:saveEnabled="true"
                android:layout_height="wrap_content"
                android:src="@drawable/selector_news_one_vp_indicator"
                />
            <ImageView
                android:layout_width="10dp"
                android:layout_margin="10dp"
                android:layout_height="wrap_content"
                android:saveEnabled="false"
                android:src="@drawable/selector_news_one_vp_indicator"
                />
            <ImageView
                android:layout_width="10dp"
                android:layout_margin="10dp"
                android:saveEnabled="false"
                android:layout_height="wrap_content"
                android:src="@drawable/selector_news_one_vp_indicator"
                />
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:padding="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/news_main_one_rl"
        >
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_margin="5dp"
            >
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/news_main_one_circle_iv_one"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:src="@drawable/splash_default"
                />
            <TextView
                android:layout_margin="5dp"
                android:id="@+id/news_main_one_circle_tv_one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="徐老师"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_margin="5dp"
            >
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/news_main_one_circle_iv_two"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:src="@drawable/splash_default"
                />
            <TextView
                android:layout_margin="5dp"
                android:id="@+id/news_main_one_circle_tv_two"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="徐老师"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_margin="5dp"
            >
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/news_main_one_circle_iv_three"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:src="@drawable/splash_default"
                />
            <TextView
                android:layout_margin="5dp"
                android:id="@+id/news_main_one_circle_tv_three"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="徐老师"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_margin="5dp"
            >
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/news_main_one_circle_iv_four"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:src="@drawable/splash_default"
                />
            <TextView
                android:layout_margin="5dp"
                android:id="@+id/news_main_one_circle_tv_four"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="徐老师"
                />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>